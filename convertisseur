def etape(element):
    if type(element) is list: # On appelle la fonction jusqu'a ce que element ne soit plus une liste
        retour=[]
        for i in range(len(element)):
            retour.append(etape(element[i]))
    else :
        if element==0.7071067811865476 or element==0.7071067811865475:
            retour=sqrt(2)/2
        elif element==-0.7071067811865476 or element==-0.7071067811865475:
            retour=-sqrt(2)/2
        elif element==1:
            retour=1
        elif element==-1:
            retour=-1
        elif element==0:
            retour=0
        else: # Au cas où ;)
            retour=element
    return retour

